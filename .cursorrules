{
  "rules": {
    "scopeManagement": {
      "enabled": true,
      "maxFeaturesPerSprint": 3,
      "requireApprovalForLargeChanges": true
    },
    "testing": {
      "enabled": true,
      "minimumCoverage": {
        "unit": 90,
        "integration": 85,
        "e2e": 80
      },
      "requireTestsForNewFeatures": true
    },
    "deployment": {
      "enabled": true,
      "stagingEnvironmentRequired": true,
      "productionApprovalRequired": true
    },
    "security": {
      "enabled": true,
      "requireSecurityReview": true,
      "minimumStandards": ["OWASP", "GDPR"]
    },
    "aiUsage": {
      "enabled": true,
      "codeReviewRequired": true,
      "maxContextWindow": 8000,
      "requireExplanationForChanges": true
    }
  },
  "workflow": {
    "featureDevelopment": {
      "steps": [
        "defineRequirements",
        "writeTests",
        "implementFeature",
        "codeReview",
        "deployToStaging",
        "userTesting",
        "deployToProduction"
      ]
    },
    "bugFixes": {
      "steps": [
        "reproduceIssue",
        "writeTest",
        "implementFix",
        "verifyFix",
        "deployPatch"
      ]
    }
  },
  "documentation": {
    "requiredSections": [
      "overview",
      "architecture",
      "security",
      "deployment",
      "testing",
      "contributing"
    ]
  }
}