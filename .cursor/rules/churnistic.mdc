globs: 
---
{
  "rules": {
    "scopeManagement": {
      "enabled": true,
      "maxFeaturesPerSprint": 3,
      "requireApprovalForLargeChanges": true
    },
    "testing": {
      "enabled": true,
      "minimumCoverage": {
        "unit": 90,
        "integration": 85,
        "e2e": 80
      },
      "requireTestsForNewFeatures": true
    },
    "deployment": {
      "enabled": true,
      "stagingEnvironmentRequired": true,
      "productionApprovalRequired": true
    },
    "security": {
      "enabled": true,
      "requireSecurityReview": true,
      "minimumStandards": ["OWASP", "GDPR"]
    },
    "aiUsage": {
      "enabled": true,
      "codeReviewRequired": true,
      "maxContextWindow": 8000,
      "requireExplanationForChanges": true
    },
    "nextjsConventions": {
      "bestPractices": [
        "Use server components by default",
        "Implement client components only when necessary",
        "Utilize the new file-based routing system",
        "Use layout.js for shared layouts",
        "Implement loading.js for loading states",
        "Use error.js for error handling",
        "Utilize route handlers for API routes"
      ],
      "folderStructure": {
        "required": [
          "app/layout.js",
          "app/page.js",
          "app/components/",
          "app/lib/",
          "app/styles/",
          "public/"
        ],
        "recommendedPatterns": [
          "Group colocated files with route groups",
          "Use _prefix for private folders",
          "Follow Next.js special file naming conventions"
        ]
      },
      "stylingStandards": [
        "CSS Modules",
        "Tailwind CSS",
        "Styled JSX"
      ],
      "optimizationRequirements": [
        "Next.js Image component",
        "Automatic Font Optimization",
        "Static Asset Optimization"
      ]
    }
  },
  "workflow": {
    "featureDevelopment": {
      "steps": [
        "defineRequirements",
        "writeTests",
        "implementFeature",
        "codeReview",
        "deployToStaging",
        "userTesting",
        "deployToProduction"
      ]
    },
    "bugFixes": {
      "steps": [
        "reproduceIssue",
        "writeTest",
        "implementFix",
        "verifyFix",
        "deployPatch"
      ]
    }
  },
  "documentation": {
    "requiredSections": [
      "overview",
      "architecture",
      "security",
      "deployment",
      "testing",
      "contributing"
    ],
    "frameworkSpecificNotes": [
      "TypeScript implementation guidelines",
      "App Router migration path",
      "Server Actions documentation",
      "Caching strategies",
      "Middleware configuration"
    ]
  }
}