rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Common functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'ADMIN';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function hasPermission(permission) {
      return isAuthenticated() && 
        (request.auth.token.permissions is list && 
         request.auth.token.permissions.hasAny([permission]));
    }

    function canManageNotifications() {
      return hasPermission('manage:notifications') || isAdmin();
    }

    function canReceiveNotificationType(type) {
      return hasPermission('receive:' + type + '_alerts') || isAdmin();
    }

    // User profiles and settings
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isOwner(userId);
      
      // Notification settings
      match /notifications/{setting} {
        allow read: if isOwner(userId) || canManageNotifications();
        allow write: if (isOwner(userId) && canReceiveNotificationType(setting)) || canManageNotifications();
      }
    }

    // Protected collections
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
} 