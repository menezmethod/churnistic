rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development-only rules - DO NOT USE IN PRODUCTION
    match /bankrewards/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Disable client-side writes
    }
    
    // Allow read/write access to all other collections in development
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Disable all other client-side writes
    }
  }
} 