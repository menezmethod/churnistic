rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isEmulator() {
      return true;  // This will be overridden in production
    }

    // Allow all operations in emulator mode
    match /{document=**} {
      allow read, write: if isEmulator() || isAuthenticated();
    }

    // Development-only rules - DO NOT USE IN PRODUCTION
    match /bankrewards/{document} {
      allow read: if isEmulator() || isAuthenticated();
      allow write: if isEmulator();
    }
  }
} 