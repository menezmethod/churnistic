# Base Configuration
NODE_ENV=development # development, test, or production
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=false
ENABLE_DEBUG_TOOLS=false

# Security
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=60000

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Vercel Configuration
VERCEL_PROJECT_ID=your-vercel-project-id

# Firebase Admin (Required for production)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...} # JSON string of service account key

# Development Features
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false # Set to true for local development
TEST_USERS_ENABLED=false

# Authentication
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com
NEXT_PUBLIC_SUPER_ADMIN_EMAIL=admin@email.com
ADMIN_SETUP_KEY=generate-a-secure-key # openssl rand -base64 32

# BankRewards Configuration
BANKREWARDS_API_URL=https://api.example.com/bankrewards
BANKREWARDS_API_KEY=your-api-key
BANKREWARDS_MAX_CONCURRENCY=2
BANKREWARDS_MAX_REQUESTS_PER_MINUTE=20
BANKREWARDS_MAX_RETRIES=3
BANKREWARDS_TIMEOUT_SECS=30
BANKREWARDS_PROXY_URLS='[]'
BANKREWARDS_USER_AGENT="Mozilla/5.0 ..."
BANKREWARDS_STORAGE_DIR="./storage/bankrewards"
BANKREWARDS_LOG_LEVEL="info"

# Reddit API (Optional)
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USER_AGENT=Churnistic/1.0.0

# Test Configuration (Optional)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=admin-password